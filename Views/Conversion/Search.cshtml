@model IEnumerable<Conversion>

@{
    ViewData["Title"] = "Search Results";
}

<div class="container">
    <ol class="breadcrumb mt-2">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item">Search Results</li>
    </ol>

    @if (Model.Count() == 0)
    {
        <h2>No Results Found</h2>
    }
    else
    {
        <div class="row text-center">
            @foreach (var c in Model)
            {
                <div class="col-md-4 mt-1">
                    <div class="card bg-info">
                        <p class="conversion-name"><a asp-controller="Conversion" asp-action="Convert" asp-route-conversionId="@c.ConversionId">@c.ConversionName</a></p>
                        <p class="conversion-formula"><span class="badge badge-warning">formula</span>  @c.ConversionFormula</p>
                    </div>
                </div>
            }
        </div>
    }
</div>
@model Conversion

@{
    ViewData["Title"] = "Edit Request";
}

<div class="container">
    <ol class="breadcrumb mt-2">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-controller="Request" asp-action="Index">Requests</a></li>
        <li class="breadcrumb-item">Edit Request</li>
    </ol>

    <form method="post" asp-controller="Request" asp-action="Edit">
        <div class="pl-2 text-danger" asp-validation-summary="All"></div>

        <input type="hidden" asp-for="@Model.ConversionId" />

        <div class="row disabled">
            <div class="form-group col">
                <label class="col-form-label" asp-for="@Model.ConversionName"></label>
                <input class="form-control" asp-for="@Model.ConversionName" />
            </div>
        </div>

        <partial name="_ConversionDetails" model="@Model" />
        <button class="btn btn-info" type="submit">Save</button>
    </form>
</div>